<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <h1>Add Subject</h1>
    <br>
    <div>
      <form action="addSubject" method="post">
        <div class="container">
          <label><b>Id</b></label>
          <input type="text" name="StudentId" value="<%= data.id %>" disabled/>
          <label><b>First Name</b></label>
          <input type="text" name="first_name" value="<%= data.first_name %>" disabled/>
          <label><b>Last Name</b></label>
          <input type="text" name="last_name" value="<%= data.last_name %>" disabled/>
          <label><b>Email</b></label>
          <input type="email" name="email" value="<%= data.email %>" disabled/>
          <label><b>Subject</b></label>
          <% if(data2.Subject == null) { %>
            <select name="selectSubject">
              <option value="">Select Subject</option>
              <% data2.forEach((d) => { %>
              <option value="<%= d.id %>"><%= d.subject_name %></option>
              <% }) %>
            </select>
          <% } else {%>
            <select name="selectSubject">
              <option value = "<%= data.Subjects[0].StudentSubject.StudentId %>" selected="<%= data.Subjects[0].StudentSubject.StudentId %>"><%= data.Subjects[0].subject_name %></option>
              <% data2.forEach(d => { %>
                <option value="<%= d.id %>"><%= d.subject_name %></option>
              <% }) %>
            </select>
          <%}%>
          <div>
            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
